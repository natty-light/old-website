---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button';
import ProjectCard from '../components/ProjectCard'
import type { ButtonProps, ProjectCardProps } from '../types';
import CardCarousel from '../components/CardCarousel';

const buttons: ButtonProps[] = [
  {
    link: 'https://github.com/natty-light',
    content:'Link to My Github',
  },
  {
    link: 'https://www.linkedin.com/in/nat-gallant-0b0b40234/',
    content: 'Link to My LinkedIn',
  }
]

const projectCards: ProjectCardProps[] = [
  {
    link: 'https://github.com/natty-light/life',
    description: `Conway's Game of Life implemented in Golang using OpenGL`,
    title: 'Life',
    buttonText: 'Github Repository'
  },
  {
    link: 'https://github.com/natty-light/quonkLang',
    description: `A BrainF**k inspired Esolang to help geese and ducks to learn to code`,
    title: 'QuonkLang',
    buttonText: 'Github Repository'
  },
  {
    link: 'https://github.com/natty-light/brickgl',
    description: `A study in targeting OpenGL directly in Golang`,
    title: 'BrickGL',
    buttonText: 'Github Repository'
  }
]
---

<Layout title="ngallant.dev">
	<div class="main">
		<div class="left">
      <h1 class="toptext">Hi, I'm <span class="fancytext">Nat</span></h1>
      <p>I'm a developer with a penchant for silly projects using Go and OpenGL</p>
      <p>You've found my Work-In-Progress site which I am building using Astro and SolidJS</p>
      <p>For now, if you like, here are some of my projects, or alternatively, some places you can find out more about me</p>
    </div>
    <div class="right">
      <CardCarousel client:load cards={projectCards} header={"my projects"}/>
    </div>
	</div>
  <div class="footer">
    {buttons.map( (button) => <Button client:load link={button.link} content={button.content} />)}
  </div>
</Layout>

<style>
  .main {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    background-color: black;
    width: 100vw;
    height: 80vh;
    z-index: 0;
  }
  .left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    background-color: #2828304d;
    backdrop-filter: blur(6px);
    border: 2px;
    border-color:#F5A9B8;
    border-style: solid;
    border-radius: 10px;
    padding: 8px 8px 8px 8px;
    width: 60vw;
    height: 60vh;
    color: white;
    z-index: 0;
  }

  .right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    background-color: #2828304d;
    backdrop-filter: blur(6px);
    border: 2px;
    border-color:#F5A9B8;
    border-style: solid;
    border-radius: 10px;
    padding: 8px 8px 8px 8px;
    width: fit-content;
    height: fit-content;
    color: white;
    z-index: 0;
  }

  .footer {
    display: flex;
    flex-direction: row;
    width: 100vw;
    height: 20vh;
    align-items: center;
    justify-items: center;
  }
  .icon {
    color: #F5A9B8;
  }
  .fancytext {
    color: #F5A9B8;
    padding: 0 8px 0 8px;
  }
    

  .toptext {
    font-size: larger;
    display: flex;
    flex-direction: row;
  }

</style>
