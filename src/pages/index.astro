---
import Layout from '../layouts/Layout.astro';
import CardCarousel from '../components/CardCarousel';
import Island from '../components/Island';
import Footer from '../components/Footer';
import ResumeOverlay from '../components/ResumeOverlay';
import Header from '../components/Header';

import projectCards from '../../content/projectCards.json';
import buttons from '../../content/buttons.json';
import headerTabs from '../../content/headertabs.json';
---
<Layout title="ngallant.dev">
  <div class="body">
    <Header client:load tabs={headerTabs} />
    <div class="main">
      <div class="left">
        <Island />
        <Footer client:idle buttons={buttons} header="my links"/>
        <ResumeOverlay client:visible file="https://drive.google.com/file/d/1y4pYUa_pT-31m65ygiONpszJgS9dMU8Q/preview" buttontext="my resume"/>
      </div>
      <div class="right">
        <CardCarousel client:load cards={projectCards} header="my projects"/>
      </div>
    </div>
  </div>
</Layout>

<style>
  .body {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }
  .main {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    background-color: black;
    height: 100%;
  }
 
  .left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    padding: 8px 8px 8px 8px;
    width: 60%;
    color: white;
    height: 100%;
  }

  .right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    padding: 8px 8px 8px 8px;
    width: 35%;
    height: fit-content;
    min-height: 60%;
    color: white;
  }

  .icon {
    color: #F5A9B8;
  }

  @media (max-width: 1100px) {
    .main {
      height: fit-content;
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 600px) {
    .right {
      width: 60%;
    }
  }
</style>
