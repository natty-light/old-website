---
import Layout from '../layouts/Layout.astro';
import CardCarousel from '../components/CardCarousel';
import Island from '../components/Island';
import Footer from '../components/Footer';

import projectCards from '../../content/projects.json';
import buttons from '../../content/buttons.json';
import ResumeOverlay from '../components/ResumeOverlay';
---
<Layout title="ngallant.dev">
	<div class="main">
		<div class="left">
      <Island client:load />
      <Footer client:load buttons={buttons} header="my links"/>
    </div>
    <div class="right">
      <CardCarousel client:load cards={projectCards} header={"my projects"}/>
    </div>
	</div>
  <ResumeOverlay client:visible file="./Resume_Nat_Gallant_Developer.pdf" buttontext="my resume"/>
</Layout>

<style>
  .main {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: flex-start;
    background-color: black;
    z-index: 0;
    height: 90vh;
  }
 
  .left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 8px 8px 8px 8px;
    width: 60vw;
    color: white;
    z-index: 0;
  }

  .right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    padding: 8px 8px 8px 8px;
    width: 40vw;
    height: fit-content;
    min-height: 60%;
    color: white;
    z-index: 0;
  }

  .icon {
    color: #F5A9B8;
  }

  @media (max-width: 1100px) {
    .main {
      height: fit-content;
      flex-direction: column;
      align-items: center;
    }
  }
</style>
