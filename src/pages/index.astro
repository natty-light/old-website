---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button';
import type { ButtonProps } from '../types';

const buttons: ButtonProps[] = [
  {
    link: "https://github.com/natty-light",
    content:"Link to My Github",
  },
  {
    link: "https://www.linkedin.com/in/nat-gallant-0b0b40234/",
    content: "Link to My LinkedIn",
  }
]
---

<Layout title="ngallant.dev">
	<main class="main">
		<div class="center">
      <h1 class="toptext">Hi, I'm <span class="fancytext">Nat</span></h1>
      <p class="text">I'm a developer with a penchant for silly projects using Go and OpenGL</p>
      <p class="text">You've found my Work-In-Progress site which I am building using Astro and either SolidJS</p>
      <p class="text">For now, if you like, check out my github profile!</p>
      <div class="container">
        {buttons.map( (button) =><Button client:load link={button.link} content={button.content} />)}
      </div>
    </div>

	</main>
</Layout>

<style>
  .main {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    background-color: black;
    width: 100vw;
    height: 100vh;
    z-index: 0;
  }
  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    background-color: #2828304d;
    backdrop-filter: blur(6px);
    border: 2px;
    border-color:#F5A9B8;
    border-style: solid;
    border-radius: 10px;
    padding: 5% 15% 5% 15%;
    width: fit-content;
    height: fit-content;
    color: white;
    z-index: 3;
  }
  .container {
    display: flex;
    align-content: space-around;
    flex-direction: row;
  }
  .icon {
    color: #F5A9B8;
  }
  .fancytext {
    color: #F5A9B8;
    padding: 0 8px 0 8px;
  }
    
  .text {
    color: white;
  }

  .toptext {
    font-size: larger;
    display: flex;
    flex-direction: row;
  }

</style>
